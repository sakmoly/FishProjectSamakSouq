<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="RoundedPageIndicator">
        <attr name="unselectedColor" format="color"/>
        <attr name="selectedColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="selectedCircleColor" format="color" />
        <attr name="selectedCircleRadius" format="dimension" />
        <attr name="selectedTextColor" format="color" />
        <attr name="selectedStepNumberColor" format="color" />
        <attr name="stepNumberTextSize" format="dimension" />
        <attr name="doneStepMarkColor" format="color" />
        <attr name="doneCircleColor" format="color" />
        <attr name="doneCircleRadius" format="dimension" />
        <attr name="doneTextColor" format="color" />
        <attr name="nextTextColor" format="color" />
        <attr name="nextStepLineColor" format="color" />
        <attr name="doneStepLineColor" format="color" />
        <attr name="stepPadding" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="stepLineWidth" format="dimension" />
        <attr name="android:textSize" />
        <attr name="android:background" />
        <attr name="android:animationDuration" />
        <attr name="stepViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="AppsTeamView">
        <attr name="font_name" format="enum">
            <enum name="MontserratBlack" value="0"/>
            <enum name="MontserratBlackItalic" value="1"/>
            <enum name="MontserratBold" value="2"/>
            <enum name="MontserratBoldItalic" value="3"/>
            <enum name="MontserratExtraBold" value="4"/>
            <enum name="MontserratExtraBoldItalic" value="5"/>
            <enum name="MontserratExtraLight" value="6"/>
            <enum name="MontserratLight" value="7"/>
            <enum name="MontserratSemiBold" value="8"/>
            <enum name="MontserratMedium" value="9"/>
            <enum name="MontserratRegular" value="10"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SlotLayout">
        <attr name="weekDay" format="string"/>
        <attr name="monthDay" format="integer"/>
        <attr name="month" format="string"/>
        <attr name="underlineColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="QuantityLayout">
        <attr name="Quantity" format="integer"/>
        <attr name="type" format="enum">
            <enum name="type_underline" value="0"/>
            <enum name="type_underline_red" value="1"/>
            <enum name="type_more" value="2"/>
            <enum name="type_less" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedPagerIndicator">
        <attr name="selectedRoundColor" format="color"/>
        <attr name="deselectedRoundColor" format="color"/>
        <attr name="selectedRoundDrawable" format="reference" />
        <attr name="deselectedRoundDrawable" format="reference"/>
        <attr name="indicatorSpacing" format="dimension"/>
        <attr name="barWidth" format="dimension"/>
        <attr name="barHeight" format="dimension"/>
        <attr name="autoScroll" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="OTPView">
        <attr name="field_count" format="integer"/>
        <attr name="field_line_color" format="color"/>
        <attr name="field_rounded_line" format="boolean"/>
    </declare-styleable>
</resources>
