<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingBottom="@dimen/_16sdp">

    <View
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@drawable/bg_rounded_corner"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search_icon"
        app:layout_constraintEnd_toStartOf="@+id/iv_fish_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_search_icon" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_rounded_corner"
        app:layout_constraintBottom_toBottomOf="@+id/iv_fish_filter"
        app:layout_constraintEnd_toEndOf="@+id/iv_fish_filter"
        app:layout_constraintStart_toStartOf="@+id/iv_fish_filter"
        app:layout_constraintTop_toTopOf="@+id/iv_fish_filter" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginStart="@dimen/_4sdp"
        app:srcCompat="@drawable/ic_home_search"
        android:padding="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_fish_list_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textSize="@dimen/_12sdp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:text="@string/label_filter_search"
        android:textColor="@color/gray"
        android:transitionName="search"
        app:font_name="MontserratMedium"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search_icon"
        app:layout_constraintEnd_toStartOf="@+id/iv_fish_filter"
        app:layout_constraintStart_toEndOf="@+id/iv_search_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_search_icon" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_fish_filter"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:padding="@dimen/_6sdp"
        app:srcCompat="@drawable/ic_home_filter"
        app:layout_constraintBottom_toBottomOf="@+id/search_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_container" />

</android.support.constraint.ConstraintLayout>

