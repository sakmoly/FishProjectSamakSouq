<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:font_name="MontserratSemiBold"
        tools:text="Saradian Small"
        android:textSize="@dimen/_12sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingBottom="@dimen/_8sdp"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_order_summary_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_weight_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_12sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/label_order_summary_weight"
        app:font_name="MontserratMedium"
        app:layout_constraintEnd_toStartOf="@+id/gl_order_summary_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_header" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_weight_hyphan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/label_cart_hyphan"
        app:font_name="MontserratMedium"
        app:layout_constraintStart_toEndOf="@+id/gl_order_summary_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_header" />


    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_weight_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp"
        tools:text="@string/label_order_summary_weight"
        app:font_name="MontserratMedium"
        android:paddingStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@+id/tv_product_detail_weight_hyphan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_header" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_finish_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_12sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/label_order_summary_finish"
        app:font_name="MontserratMedium"
        app:layout_constraintEnd_toStartOf="@+id/gl_order_summary_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_weight_header" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_finish_hyphan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/label_cart_hyphan"
        app:font_name="MontserratMedium"
        app:layout_constraintStart_toEndOf="@+id/gl_order_summary_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_weight_header" />


    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_finish_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp"
        tools:text="@string/label_order_summary_finish"
        app:font_name="MontserratMedium"
        android:paddingStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@+id/tv_product_detail_finish_hyphan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_weight_header" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_amount_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_12sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/label_order_summary_amount"
        app:font_name="MontserratMedium"
        app:layout_constraintEnd_toStartOf="@+id/gl_order_summary_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_finish_header" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_amount_hyphan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/label_cart_hyphan"
        app:font_name="MontserratMedium"
        app:layout_constraintStart_toEndOf="@+id/gl_order_summary_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_finish_header" />


    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_product_detail_amount_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp"
        tools:text="@string/label_order_summary_amount"
        app:font_name="MontserratMedium"
        android:paddingStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@+id/tv_product_detail_amount_hyphan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_finish_header" />

</android.support.constraint.ConstraintLayout>