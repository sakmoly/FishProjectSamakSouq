<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_fish_details_photo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_130sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_placeholder"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_fish_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Karimeen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_fish_detail_price"
        app:layout_constraintTop_toBottomOf="@+id/iv_fish_details_photo"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/_14sdp"
        android:textColor="@android:color/black"
        android:padding="@dimen/_8sdp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_fish_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="SAR 250"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_fish_details_photo"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/Yellow"
        android:textStyle="bold"
        android:padding="@dimen/_8sdp"/>
</android.support.constraint.ConstraintLayout>