<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_failure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/Yellow"
        app:title="@string/label_title_payment_success"
        app:titleTextColor="@android:color/white"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_failure"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        app:srcCompat="@drawable/ic_failure"
        android:layout_marginTop="@dimen/_44sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_failure"/>

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_failure_oops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_failure"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/label_transaction_failure"
        app:font_name="MontserratBold"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="@dimen/_24sdp"/>

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_failure_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV Entered wrong"
        android:textSize="@dimen/_14sdp"
        android:padding="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:font_name="MontserratMedium"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_failure_oops"/>

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:text="@string/label_retry_again"
        android:textAllCaps="true"
        android:background="@drawable/bg_try_again"
        android:textColor="@android:color/white"
        android:paddingTop="@dimen/_8sdp"
        app:font_name="MontserratExtraBold"
        android:textSize="@dimen/_16sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_34sdp"
        android:paddingEnd="@dimen/_34sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_failure_reason"
        app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>