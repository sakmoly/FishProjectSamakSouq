<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_delivery_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp"
        app:font_name="MontserratExtraBold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Delivery Name" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_delivery_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_12sdp"
        android:textSize="@dimen/_14sdp"
        app:font_name="MontserratLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_name"
        tools:text="Rachana, \nOnakkoor P.O.\nPampakuda" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_checkout_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.86" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/graylight"
        app:layout_constraintBottom_toBottomOf="@+id/rb_deliver_here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rb_deliver_here" />

    <qa.happytots.yameenhome.components.YameenRadioButton
        android:id="@+id/rb_deliver_here"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:text="@string/label_deliver_here"
        android:theme="@style/YameenRadioButtonTheme"
        app:font_name="MontserratSemiBold"
        app:layout_constraintEnd_toStartOf="@id/gl_checkout_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_address" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_edit_delivery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_delivery_address_edit"
        app:font_name="MontserratSemiBold"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/rb_deliver_here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gl_checkout_five"
        app:layout_constraintTop_toTopOf="@+id/rb_deliver_here" />

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_address_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_address_delete"
        android:padding="@dimen/_4sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:font_name="MontserratSemiBold"
        app:layout_constraintBottom_toBottomOf="@id/rb_deliver_here"
        app:layout_constraintEnd_toStartOf="@+id/tv_edit_delivery_address"
        app:layout_constraintTop_toTopOf="@+id/rb_deliver_here"/>

</android.support.constraint.ConstraintLayout>