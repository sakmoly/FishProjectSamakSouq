<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/complete_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font_name="MontserratSemiBold"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pellets" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv1"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="@+id/tv1"
        app:layout_constraintEnd_toEndOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:src="@drawable/default_placeholder" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv2"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_gray"
        app:layout_constraintStart_toStartOf="@+id/iv1"
        app:layout_constraintEnd_toEndOf="@+id/iv1"
        app:layout_constraintTop_toBottomOf="@+id/iv1"
        android:gravity="center" />

</android.support.constraint.ConstraintLayout>