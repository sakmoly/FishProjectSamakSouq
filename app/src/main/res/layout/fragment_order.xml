<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragment.OrderFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_place_order"
        android:paddingBottom="@dimen/_4sdp"/>

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_place_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_circular"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/label_place_order"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:font_name="MontserratBold"
        android:textSize="@dimen/_14sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"/>


</android.support.constraint.ConstraintLayout>