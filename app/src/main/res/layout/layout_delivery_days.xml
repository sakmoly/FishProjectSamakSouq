<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_day_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="TUE"
        android:padding="@dimen/_4sdp"
        app:font_name="MontserratRegular"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_11sdp"/>

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_day_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="25"
        android:paddingBottom="@dimen/_4sdp"
        app:font_name="MontserratBold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_short"/>

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="March"
        android:textAllCaps="true"
        app:font_name="MontserratRegular"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_no"/>

    <qa.happytots.yameenhome.components.YameenTextView
        android:id="@+id/tv_underline"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_slot_yellow_underline"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="true"
        app:font_name="MontserratRegular"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_month"/>

</android.support.constraint.ConstraintLayout>